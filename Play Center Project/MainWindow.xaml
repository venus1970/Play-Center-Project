                    <Image Source="Images/station-removebg-preview.png" 
                   Width="30" Height="30" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Stretch="UniformToFill"/>

                    <!-- ToolTip for Image -->
