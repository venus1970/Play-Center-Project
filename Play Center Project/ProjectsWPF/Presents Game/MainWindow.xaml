<Window x:Class="Presents_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presents_Game"
        mc:Ignorable="d"
        Icon="images/Present.ico"
        Title="Presents Game" Height="700" Width="850" Closing="Window_Closing" ResizeMode="CanMinimize">
    <Canvas Name="MyCanvas" Focusable="True" MouseMove="Canvas_MouseMove">
        <!-- Set Background to an Image -->
        <Canvas.Background>
            <ImageBrush ImageSource="/Images/birthday.jpg"/>
        </Canvas.Background>

        <Label Name="scoreText" FontSize="18" FontWeight="ExtraBlack">Score: 0</Label>
        <Label Name="missedText" FontSize="18" FontWeight="ExtraBlack" Canvas.Left="391">Missed: 0</Label>

        <Rectangle Name="player1" Width="80" Height="80" Canvas.Left="214" Canvas.Top="591" Fill="Red" />
    </Canvas>
</Window>
