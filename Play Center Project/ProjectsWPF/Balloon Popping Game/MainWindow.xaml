<Window x:Class="Balloon_Popping_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Balloon_Popping_Game"
        mc:Ignorable="d"
        Icon="files/ballon.ico"
        Title="Balloon Popping Game" Height="600" Width="450" ResizeMode="CanMinimize" Closing="Window_Closing">
    <Canvas Name="MyCanvas" Focusable="True" MouseLeftButtonDown="PopBalloons" Background="White">

        <Label FontSize="24" Name="scoreText" Content="Score: 0" FontWeight="ExtraBold" Background="Yellow"  HorizontalAlignment="Left" VerticalAlignment="Center" />

    </Canvas>
   
</Window>
